<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CustomTextInput" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <!-- Color del hint en todos los estados -->
        <item name="hintTextColor">@color/black</item>
        <!-- Color del texto en todos los estados -->
        <item name="android:textColor">@color/black</item>
        <!-- Color del hint cuando el campo está enfocado -->
        <item name="android:textColorHint">@color/black</item>
        <!-- Color del borde en todos los estados -->
        <item name="boxStrokeColor">@color/text_input_stroke_color</item>
        <!-- Fondo blanco semitransparente -->
        <item name="boxBackgroundColor">#80FFFFFF</item>
    </style>

    <!-- Estilo para un título con un tamaño de texto mayor -->
    <style name="CustomTextViewTitle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/background_textview</item>
        <item name="android:layout_marginBottom">24dp</item>
        <item name="android:padding">12dp</item>
    </style>
</resources>
